<section id="beneficios" class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-16">
            Beneficios para todos
        </h2>

        <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
            <!-- Para Ofertantes -->
            <div
                class="bg-white dark:bg-gray-900 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow"
            >
                <div
                    class="w-14 h-14 bg-primary-100 dark:bg-primary-900/30 rounded-xl flex items-center justify-center mb-6"
                >
                    <span class="text-2xl"></span>
                </div>
                <h3 class="text-2xl font-bold mb-4">
                    Para Ofertantes (Personas)
                </h3>
                <ul class="space-y-3 mb-6">
                    <li class="flex items-start">
                        <span class="text-primary-500 mr-2">✓</span>
                        <span
                            >Solicita recolección de materiales reciclables
                            desde tu casa</span
                        >
                    </li>
                    <li class="flex items-start">
                        <span class="text-primary-500 mr-2">✓</span>
                        <span>Recibe recompensas por reciclar</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-primary-500 mr-2">✓</span>
                        <span
                            >Programa recolecciones en tu horario preferido</span
                        >
                    </li>
                    <li class="flex items-start">
                        <span class="text-primary-500 mr-2">✓</span>
                        <span
                            >Sigue el estado de tu solicitud en tiempo real</span
                        >
                    </li>
                </ul>
            </div>

            <!-- Para Recicladores -->
            <div
                class="bg-white dark:bg-gray-900 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow"
            >
                <div
                    class="w-14 h-14 bg-primary-100 dark:bg-primary-900/30 rounded-xl flex items-center justify-center mb-6"
                >
                    <span class="text-2xl"></span>
                </div>
                <h3 class="text-2xl font-bold mb-4">Para Recicladores</h3>
                <ul class="space-y-3 mb-6">
                    <li class="flex items-start">
                        <span class="text-primary-500 mr-2">✓</span>
                        <span>Hub centralizado de solicitudes disponibles</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-primary-500 mr-2">✓</span>
                        <span
                            >Rutas optimizadas por distancia, peso y tráfico</span
                        >
                    </li>
                    <li class="flex items-start">
                        <span class="text-primary-500 mr-2">✓</span>
                        <span>Historial completo de recolecciones</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-primary-500 mr-2">✓</span>
                        <span>Métricas y estadísticas de desempeño</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
